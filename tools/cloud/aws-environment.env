# AWS 환경 설정 파일
# Cloud Intermediate 과정용 AWS 설정

# AWS 기본 설정
export AWS_DEFAULT_REGION="ap-northeast-2"
export AWS_REGION="ap-northeast-2"

# EKS 클러스터 설정
export EKS_CLUSTER_NAME="cloud-intermediate-eks"
export EKS_NODE_TYPE="t3.medium"
export EKS_NODE_COUNT=2
export EKS_MIN_NODES=1
export EKS_MAX_NODES=4
export EKS_VERSION="1.28"

# VPC 설정
export VPC_CIDR="10.0.0.0/16"
export SUBNET_CIDR="10.0.1.0/24"

# 보안 그룹 설정
export SECURITY_GROUP_NAME="cloud-intermediate-sg"
export SECURITY_GROUP_DESCRIPTION="Cloud Intermediate 과정용 보안 그룹"

# 키 페어 설정
export KEY_PAIR_NAME="cloud-deployment-key"

# 태그 설정
export ENVIRONMENT_TAG="Learning"
export PROJECT_TAG="CloudIntermediate"
export OWNER_TAG="CloudIntermediate"

# 모니터링 설정
export ENABLE_CLOUDWATCH="true"
export ENABLE_PROMETHEUS="true"
export ENABLE_GRAFANA="true"

# 로그 설정
export LOG_LEVEL="INFO"
export LOG_RETENTION_DAYS=7

# 비용 최적화 설정
export ENABLE_SPOT_INSTANCES="false"
export ENABLE_AUTO_SCALING="true"
export ENABLE_CLUSTER_AUTOSCALER="true"